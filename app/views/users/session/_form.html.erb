<%= form_with url: '/sign-in', method: 'post' do |form| %>
  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :remember?, style: "display: block" %>
    <%= form.check_box :remember? %>
  </div>

  <div>
    <%= form.submit 'Sign In' %>
  </div>
<% end %>
